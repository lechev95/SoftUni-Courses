@model LibrarianQueryModel

@{
    ViewBag.Title = "Служители";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

@if(!Model.Librarians.Any())
{
    <h2 class="text-center">Липсват данни за служители!</h2>
}

<div class="row">
    <table class="table table-hover text-start">
        <thead>
            <tr>
                <th scope="col">ИД на служител</th>
                <th scope="col">Телефон</th>
                <th scope="col">Потребител ИД</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var librarian in Model.Librarians)
            {
                <partial name="_LibrarianPartial" model="@librarian" />
            }
        </tbody>
    </table>
</div>
