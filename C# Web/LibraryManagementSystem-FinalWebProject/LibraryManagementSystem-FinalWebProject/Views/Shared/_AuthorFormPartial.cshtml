@model AuthorModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Иван...">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Вазов...">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Education"></label>
                <input asp-for="Education" class="form-control" placeholder="СУ Св. Климент Охридски...">
                <span asp-validation-for="Education" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography"></label>
                <textarea asp-for="Biography" rows="4" class="form-control" placeholder="Биография..."></textarea>
                <span asp-validation-for="Biography" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Запази" />
            </div>
        </form>
    </div>
</div>
