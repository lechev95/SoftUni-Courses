@model PublisherQueryModel

@{
    ViewBag.Title = "Всички издатели";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

@if (!Model.Publishers.Any())
{
            <h2 class="text-center">Липсват данни за издатели!</h2>
}

<div class="row">
    <table class="table table-hover text-start">
        <thead>
            <tr>
                <th scope="col">ИД на издател</th>
                <th scope="col">Издател</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var publisher in Model.Publishers)
            {
                                <partial name="_PublisherPartial" model="@publisher" />
            }
        </tbody>
    </table>
</div>