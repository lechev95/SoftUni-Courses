@model GenreQueryModel

@{
    ViewBag.Title = "Всички жанрове";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr/>

@if (!Model.Genres.Any())
{
        <h2 class="text-center">Липсват данни за жанрове!</h2>
}

<div class="row">
    <table class="table table-hover text-start">
        <thead>
            <tr>
                <th scope="col">ИД на жанр</th>
                <th scope="col">Жанр</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model.Genres)
            {
                    <partial name="_GenrePartial" model="@genre" />
            }
        </tbody>
    </table>
</div>